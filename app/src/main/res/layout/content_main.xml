<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">


    <ListView
        android:id="@+id/lv_main_courses"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_select_from_db" />

    <ListView
        android:id="@+id/lv_main_quizzes"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="@+id/lv_main_courses"
        app:layout_constraintStart_toStartOf="@+id/lv_main_courses"
        app:layout_constraintTop_toBottomOf="@+id/lv_main_courses" />

    <Button
        android:id="@+id/btn_select_from_db"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_main_btn"
        app:layout_constraintBottom_toBottomOf="@+id/et_date_select_main"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/et_date_select_main"
        app:layout_constraintTop_toTopOf="@+id/et_date_select_main" />

    <EditText
        android:id="@+id/et_date_select_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginLeft="24dp"
        android:ems="10"
        android:hint="@string/date_format"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/label_info_random" />

    <TextView
        android:id="@+id/label_info_random"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_main"
        app:layout_constraintEnd_toEndOf="@+id/et_date_select_main"
        app:layout_constraintStart_toStartOf="@+id/et_date_select_main"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>