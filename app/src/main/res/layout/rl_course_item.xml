<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/ll_course_part1">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:textSize="30sp"
            android:textColor="@color/textColor"
            android:id="@+id/tv_course_title"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.3"
            android:textSize="25sp"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:id="@+id/tv_course_description"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:textSize="20sp"
            android:textAlignment="center"
            android:textColor="@color/textColor"
            android:id="@+id/tv_course_author"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/ll_course_part2"
        android:layout_below="@+id/ll_course_part1">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            android:id="@+id/tv_course_date"/>
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:textSize="12sp"
            android:textColor="@color/textColor"
            android:id="@+id/tv_course_quizes"/>
    </LinearLayout>


</RelativeLayout>